<div class="container" style="margin-top: 80px; margin-bottom: 80px;">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <h1>Add New Article</h1>
            <p class="btm-dot">...</p>
            
            <form method="post" action="/blog/funplace/update">
                <div class="form-group">
                    <label for="author">Author</label>
                    <input type="text" class="form-control" id="author" name="author" required>
                </div>
                
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" class="form-control" id="title" name="title" required>
                </div>
                
                <div class="form-group">
                    <label for="seo-title">SEO Title (URL slug)</label>
                    <input type="text" class="form-control" id="seo-title" name="seo-title" required>
                    <small class="form-text text-muted">This will be used in the URL. Use lowercase letters and dashes only.</small>
                </div>
                
                <div class="form-group">
                    <label for="body">Content</label>
                    <textarea class="form-control" id="body" name="body" rows="10" required></textarea>
                </div>
                
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Create Article</button>
                    <a href="/blog" class="btn btn-default">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>