<div class="container" style="margin-top: 80px; margin-bottom: 80px;">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <h1>Edit Article</h1>
            <p class="btm-dot">...</p>
            
            <% if (article) { %>
                <form method="post" action="/blog/funplace/update/<%= article.id %>">
                    <div class="form-group">
                        <label for="author">Author</label>
                        <input type="text" class="form-control" id="author" name="author" value="<%= article.author %>" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="title">Title</label>
                        <input type="text" class="form-control" id="title" name="title" value="<%= article.title %>" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="seo-title">SEO Title (URL slug)</label>
                        <input type="text" class="form-control" id="seo-title" name="seo-title" value="<%= article.seoTitle %>" required>
                        <small class="form-text text-muted">This will be used in the URL. Use lowercase letters and dashes only.</small>
                    </div>
                    
                    <div class="form-group">
                        <label for="body">Content</label>
                        <textarea class="form-control" id="body" name="body" rows="10" required><%= article.body %></textarea>
                    </div>
                    
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Update Article</button>
                        <a href="/blog/<%= article.id %>/<%= article.seoTitle %>" class="btn btn-default">Cancel</a>
                    </div>
                </form>
            <% } else { %>
                <h1>Article Not Found</h1>
                <p>The article you're trying to edit doesn't exist.</p>
                <a href="/blog" class="btn btn-primary">Back to Blog</a>
            <% } %>
        </div>
    </div>
</div>