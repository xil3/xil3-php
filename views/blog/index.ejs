<div class="container" style="margin-top: 80px; margin-bottom: 80px;">
    <div class="row">
        <div class="col-md-8">
            <h1>Blog</h1>
            <p class="btm-dot">...</p>
            
            <% if (articles && articles.length > 0) { %>
                <% articles.forEach(function(article) { %>
                    <div class="blog-post" style="margin-bottom: 30px; padding-bottom: 20px; border-bottom: 1px solid #eee;">
                        <h3><a href="/blog/<%= article.id %>/<%= article.seoTitle %>"><%= article.title %></a></h3>
                        <p class="text-muted">By <%= article.author %> on <%= article.dateCreated.toDateString() %></p>
                        <p><%= article.body.substring(0, 200) %>...</p>
                        <a href="/blog/<%= article.id %>/<%= article.seoTitle %>" class="btn btn-primary">Read More</a>
                    </div>
                <% }); %>
            <% } else { %>
                <p>No articles found.</p>
            <% } %>
            
            <div style="margin-top: 30px;">
                <a href="/blog/funplace/add" class="btn btn-success">Add New Article</a>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="sidebar">
                <h4>Tags</h4>
                <div class="tags">
                    <span class="badge">Technology</span>
                    <span class="badge">Web Development</span>
                    <span class="badge">Consulting</span>
                </div>
            </div>
        </div>
    </div>
</div>