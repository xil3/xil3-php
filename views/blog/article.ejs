<div class="container" style="margin-top: 80px; margin-bottom: 80px;">
    <div class="row">
        <div class="col-md-8">
            <% if (article) { %>
                <h1><%= article.title %></h1>
                <p class="text-muted">By <%= article.author %> on <%= article.dateCreated.toDateString() %></p>
                <hr>
                <div class="article-content">
                    <p><%= article.body %></p>
                </div>
                <hr>
                <div class="article-actions">
                    <a href="/blog/funplace/edit/<%= article.id %>" class="btn btn-warning">Edit</a>
                    <a href="/blog" class="btn btn-default">Back to Blog</a>
                </div>
            <% } else { %>
                <h1>Article Not Found</h1>
                <p>The article you're looking for doesn't exist.</p>
                <a href="/blog" class="btn btn-primary">Back to Blog</a>
            <% } %>
        </div>
        
        <div class="col-md-4">
            <div class="sidebar">
                <h4>Tags</h4>
                <div class="tags">
                    <span class="badge">Technology</span>
                    <span class="badge">Web Development</span>
                    <span class="badge">Consulting</span>
                </div>
            </div>
        </div>
    </div>
</div>